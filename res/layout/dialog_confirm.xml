<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
  android:layout_width="fill_parent" android:layout_height="wrap_content"
  android:orientation="vertical" >
	
	<TextView android:id="@+id/dialog_confirm_message" 
	  android:layout_width="fill_parent" android:layout_height="wrap_content" 
	  android:minWidth="208dip"
	  android:layout_weight="1" 
	  android:layout_margin="4dip" 
	  android:minLines="2" 
	  android:text="" 
	/>
	<FrameLayout 
	  android:layout_width="fill_parent" android:layout_height="wrap_content"
	  android:layout_weight="1" 
	>
    	<include android:id="@+id/dialog_confirm_button_positive" 
    	    layout="@layout/button_positive" />
		<include android:id="@+id/dialog_confirm_button_negative" 
		    layout="@layout/button_negative" />
	</FrameLayout>
    
</LinearLayout>
